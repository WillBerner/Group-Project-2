<div class="column is-one-quarter mb-6 mt-3r">

    <div class="columns">
        <div class="column">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by5">
                        <a class="" href="/listing/{{id}}">
                            <img src="{{img_url}}" alt="{{img_url}}" />
                        </a>
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <p class="media-content title">{{product_name}}</p>
                    </div>
                    <p>{{description}}</p>
                </div>
            </div>

        </div>
    </div>
</div>