    <div class="mt-8r mx-6">
        <div class="columns h-855 mlr-227-200">
            <div class="column has-background-black-ter mt-6 px-5 py-5 rounded mlr-200">
                <form class="form create-product">
                    <div class="form-group mx-3">
                        <label for="product-info" class="label has-text-white has-text-centered is-size-3">Post a
                            new
                            product</label>
